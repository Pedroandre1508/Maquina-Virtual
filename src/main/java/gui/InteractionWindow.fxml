<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.InteractionController" style="-fx-background-color: lightgray;" prefWidth="600" prefHeight="400">
    <children>
        <TextArea fx:id="messageTextArea" editable="false" wrapText="true" style="-fx-text-fill: gray; -fx-background-color: black; -fx-border-color: silver;" prefHeight="300"/>
        <HBox>
            <TextField fx:id="inputTextField" style="-fx-text-fill: black; -fx-background-color: white; -fx-border-color: black;" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" text="Enviar" onAction="#handleSendButton" style="-fx-text-fill: white; -fx-background-color: red; "/>
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>